<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-55dp"
    android:background="@null"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@android:color/transparent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/restaurant_button"
            android:layout_width="366dp"
            android:layout_height="159dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            app:srcCompat="@drawable/button_red"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="99dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="78dp"
            android:layout_toEndOf="@+id/food_icon"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLines="4"
            android:singleLine="false"
            android:text="@string/str_rest_layout_restaurant_name"
            android:textColor="@color/fontColour"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inspection_date"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="86dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="@string/str_rest_layout_date"
            android:textColor="@color/fontColour" />

        <TextView
            android:id="@+id/num_issues"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="258dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="@string/str_rest_layout_num_issues"
            android:textColor="@color/fontColour"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/issues"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="261dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="@string/str_rest_layout_issues"
            android:textColor="@color/fontColour" />

        <ImageView
            android:id="@+id/food_icon"
            android:layout_width="38dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/restaurant_button"
            android:layout_alignTop="@+id/restaurant_button"
            android:layout_alignEnd="@+id/restaurant_button"
            android:layout_alignBottom="@+id/restaurant_button"
            android:layout_marginStart="46dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="79dp"
            android:gravity="center"
            app:srcCompat="@drawable/food_icon"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/haz_icon"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="123dp"
            app:srcCompat="@drawable/restlist_high"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="342dp"
            android:layout_marginBottom="121dp"
            app:srcCompat="@drawable/box_info" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>