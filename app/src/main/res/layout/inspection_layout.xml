<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/inspection_button_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            app:srcCompat="@drawable/inspection_high"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/insp_num_of_issues"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="43dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:maxLines="4"
            android:singleLine="false"
            android:text="@string/string_insp_layout_issue_labels"
            android:textColor="@color/fontColour"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_non_crit_issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="273dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="70dp"
            android:text="@string/str_insp_layout_test_noncrit"
            android:textColor="@color/fontColour"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_crit_issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="49dp"
            android:text="@string/str_insp_layout_test_crit"
            android:textColor="@color/fontColour"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/inspection_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="113dp"
            android:gravity="center"
            android:text="@string/str_insp_layout_date"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>